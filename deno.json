{
  "lint": {
    "files": {
      "include": ["src/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["camelcase"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "lineWidth": 200
    }
  },
  "tasks": {
    "bundle": "deno bundle src/main.ts bundle/cli.js",
    "fmt": "deno fmt --ignore=src/help.ts --options-line-width 100",
    "fmt:help": "deno fmt src/help.ts --options-line-width 200",
    "test": "deno test --allow-run --allow-read --allow-write --allow-net",
    "test:cov": "deno test --allow-run --allow-read --allow-write --allow-net --coverage=cov_profile",
    "cov": "deno coverage cov_profile"
  }
}
